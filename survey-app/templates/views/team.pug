extends ../layouts/default

block content
	.container: .jumbotron
		if team
			h2 #{team.name} Team Folder
		else
			h2 Team Folder

		if team
			if isLeader
				h4 Your Team
				if members.length
					each member in members
						row
							p.col-sm-4 #{member.name.first} #{member.name.last}
							p.col-sm-4 #{member.modules}
							a.col-sm-4(href=`mailto:` + member.email) Email
							a.col-sm-4(data-target='#modal', data-toggle='modal') Assign Modules
							
	//- Would probably be better to handle this with jquery or something, this is getting gross
	#modal.modal
		.modal-dialog
			.modal-content
				.modal-header
					h3.modal-title Hey There!
				.modal-body
					.form-group
						p Assigned Modules
						each mod, id in modMap
							.checkbox
								label
									input.checkbox-input(type="checkbox" value=id, name=mod)
									| #{mod}
					button.btn.btn-primary(type='button', data-dismiss='modal') Exit
